<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <EditText
        android:id="@+id/et_stock1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/txt_border_red_selector"
        android:focusable="false"
        android:gravity="center"
        android:hint="股票1"
        android:onClick="onViewClicked"
        android:padding="8dp"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey" />

    <EditText
        android:id="@+id/et_stock2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/txt_border_red_selector"
        android:focusable="false"
        android:gravity="center"
        android:hint="股票2"
        android:onClick="onViewClicked"
        android:padding="8dp"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey" />

    <EditText
        android:id="@+id/et_stock3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/txt_border_red_selector"
        android:focusable="false"
        android:gravity="center"
        android:hint="股票3"
        android:onClick="onViewClicked"
        android:padding="8dp"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey" />

    <EditText
        android:id="@+id/et_stock4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/txt_border_red_selector"
        android:focusable="false"
        android:gravity="center"
        android:hint="股票4"
        android:onClick="onViewClicked"
        android:padding="8dp"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey" />

    <EditText
        android:id="@+id/et_stock5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/txt_border_red_selector"
        android:focusable="false"
        android:gravity="center"
        android:hint="股票5"
        android:onClick="onViewClicked"
        android:padding="8dp"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey" />

    <com.chandler.red.mystock.keyboard.KeyboardEditText
        android:id="@+id/et_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_weight="1"
        android:background="@drawable/txt_border_red_selector"
        android:gravity="center"
        android:hint="数量"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_bg_grey"
        app:keyboardType="KEYBOARD_TYPE_STOCK_AMOUNT" />

    <TextView
        android:id="@+id/btn_line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_count"
        android:layout_marginTop="52dp"
        android:background="@drawable/shape_btn_red_selector"
        android:gravity="center"
        android:onClick="onViewClicked"
        android:text="排队"
        android:textColor="@color/main_text_color"
        android:textSize="16sp" />

</RelativeLayout>